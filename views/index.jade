extends layout

block content


	div.container(style="background: #74b446; width: auto; color: white;")
		div.container
			div.row
				div.col-lg-12(style="font-family: 'Montserrat', sans-serif")
					
					h1= title
					p Welcome to #{title} Impact Calculator, a KPCB Fellows Challenge Project

	div.container
		div.row
			div.col-lg-1
				i(class="fa fa-search fa-5x", style="margin-top: 70px")

			div.col-lg-11(style="font-family: 'Montserrat', sans-serif")
				form(onsubmit="return redirect();" style="font-size: 50px;")
					paper-input-decorator(label="Enter the name of a lender", style="color: #74b446")
						input(id="name", is="core-input")

		if lender != "ERROR"
			div.row
				div.col-lg-11
					h2 Lender ID: #{lender} / Lender Name: #{name}
				div.col-md-1
					ul(style="list-style-type: none; display: inline;")
						li(style="align:right;")
							a(href="javascript:window.location.href=window.location.href")
								i(class="fa fa-refresh fa-spin fa-5x")
						li(style="align: right;")
							a(href="etc/KIVA_LOAN_IMPACT_SURVEY.pdf")
								i(class="fa fa-file-pdf-o fa-5x")
		else
			h2 #{query_message}

	if lender != "ERROR"
		div.container
			div.row
				br
				div.col-md-4(style="font-family: 'Montserrat', sans-serif;")
					div.image-container(style="height: 100%;")
						img(class="img-responsive img-circle", src="http://www.kiva.org/img/s300/"+ imageLoan + ".jpg", style="width: 270px; height: 270px; overflow:hidden;")
				div.col-md-8(style="font-family: 'Montserrat', sans-serif;")
					h2 #{borrower}
					h3 Sector: #{sector}
					h3 Country: #{countryLoan}
					h3 Loaned amount: $#{funded}
					h3 Description: #{description}
			br
			br
			div.row
				div.col-lg-12
					ul(style="list-style-type: none;")
