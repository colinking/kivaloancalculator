			div.row
				div.col-lg-12
					ul(style="list-style-type: none;")
						li(style="height: 250px; width: 250px; float:left; margin-right: 25px; background: red;  text-align: center; color: white")
							h2 Education
							h2#dollar(style="margin-top: 60px") $500
